apiVersion: apps/v1
kind: Deployment
metadata:
  name: springdeployment
  namespace: sonuns
spec:
  replicas: 2
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 1
  selector:
    matchLabels:
      app: springapp
  template:
    metadata:
      labels:
        app: springapp
    spec:
      containers:
      - name: springcontainer
        image: senoritahub/spring-app:1
        ports:
        - containerPort: 8080
        env:
        - name: MONGO_DB_HOSTNAME
          value: mongosvc
        - name: MONGO_DB_USERNAME
          value: sonudb
        - name: MONGO_DB_PASSWORD
          value: sonudb123
---
apiVersion: v1
kind: Service
metadata:
  name: springsvc
  namespace: sonuns
spec:
  type: NodePort
  selector:
    app: springapp
  ports:
  - port: 80
    targetPort: 8080
---

apiVersion: apps/v1
kind: ReplicaSet
metadata:
  name: mongors
  namespace: sonuns
spec:
  selector:
    matchLabels:
      app: mongoapp
  template:
    metadata:
      labels:
        app: mongoapp
    spec:
      containers:
      - name: mongocontainer
        image: mongo
        ports:
        - containerPort: 27017
        env:
        - name: MONGO_INITDB_ROOT_USERNAME
          value: sonudb
        - name: MONGO_INITDB_ROOT_PASSWORD
          value: sonudb123
---
apiVersion: v1
kind: Service
metadata:
  name: mongosvc
  namespace: sonuns
spec:
  type: ClusterIP
  selector:
    app: mongoapp
  ports:
  - port: 27017
    targetPort: 27017
